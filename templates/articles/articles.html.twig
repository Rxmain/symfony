{% extends 'base.html.twig' %}

{% block body %}

<div class="container h-100">
    <div class="container h-200">
        <h2>My blog</h2>
        <h3>Publish new article: </h3><a href="articles/new" class="btn btn-primary">New article</a>
    </div>
    {% for article in articles %}
    <div class="row">
        <li class="col-lg card">
            <div class="card-body">
                <h5 class="card-title">News</h5>
                <p class="card-subtitle mb-2 text-muted">{{ article.category }}</p>
                <p class="card-subtitle mb-2 text-muted">{{ article.date|date("F jS \\a\\t g:ia") }}</p>
                <p class="card-text">{{ article.content }}</p>
                <a href="articles/edit/iig{{ article.id }}" class="btn btn-primary">Edit</a>
            </div>
        </li>
    </div>
    {% endfor %}
</div>

{% endblock %}